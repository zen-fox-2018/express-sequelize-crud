
<%- include ./partials/header.ejs %> 
<%- include ./partials/navbar.ejs %>

<div class="container">
  <h2>List Teachers</h2>
  <p>*list of all teachers at school*</p>            
  <table class="table table-striped">
    <thead>
      <tr>
      <th>NO.</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0 ;i<data.length; i++) { %>
        <tr>
        <td><%= i+1 %></td>
        <td><%= data[i]['first_name']%></td>
        <td><%= data[i]['last_name']%></td>
        <td><%= data[i]['email']%></td>
        <td><a href="/teachers/edit/:<%= data[i].id %>" class="btn btn-info" role="button">Edit</a>    <a href="/teachers/delete/:<%= data[i].id %>" class="btn btn-info" role="button">delete</a></td>
        </tr>
      <% } %>
            
      </tbody>
    </table>
</div>
<br>

<a style="text-align:center ; margin-left: 10%" href="/teachers/add" class="btn btn-info" role="button">Add Teacher</a>





