<%- include ./partial/header.ejs %>
<div class="container">
    <h2 style="text-align: center"><%= title %></h2>
    <h4 style="text-align :center"><a href="/<%= route %>/add"> Add <%= title %> Data</a></h4>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>email</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0 ; i < data.length; i++ ) { %>
          <tr>
            <td><%= data[i].id %></td>
            <td><%= data[i].first_name %></td>
            <td><%= data[i].last_name %></td>
            <td><%= data[i].email %></td>
            <td><a href="/<%= route %>/edit/<%= data[i].id %>"> Edit </a> | 
              <a href="/<%= route %>/delete/<%= data[i].id %>"> Delete </a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
<%- include ./partial/footer.ejs %>